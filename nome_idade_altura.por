programa {
  cadeia nome
  real idade, altura
  funcao inicio() {
    escreva("Digite seu nome: ")
    leia(nome)
    escreva("Digite sua idade: ")
    leia(idade)
    escreva("Digite sua altura em cintímetros(ex: 175): ")
    leia(altura)
    escreva("Seu nome é ",nome,"\nVocê tem ",idade,"anos \nVocê tem ",altura," centímetros de altura")
  }
}
